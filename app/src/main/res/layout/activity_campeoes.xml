<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampeoesActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/background_home"
        android:scaleType="centerCrop"
        android:scrollX="-240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagemprojeto2" />

    <LinearLayout
        android:id="@+id/linearCabecalho"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@color/preto_cabecalho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBackground">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/applogo" />

        <ImageButton
            android:id="@+id/imgbtnHome"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/botao_home"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/imghome"

            android:onClick="abrirHomeActivity" />

        <ImageButton
            android:id="@+id/imgbtnCampeoes"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/botao_campeoes"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/imgcampeoes" />

        <ImageButton
            android:id="@+id/imgbtnItens"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/botao_itens"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/imgitens"

            android:onClick="abrirItensActivity" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeBorda1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/cabecalho"
        app:layout_constraintEnd_toEndOf="@+id/linearCabecalho"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearCabecalho"
        app:layout_constraintTop_toTopOf="@+id/linearCabecalho">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/branco_container"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeBorda1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:isScrollContainer="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/akali" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgaphelios" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgcamille" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgdiana" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imggwen" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgirelia" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgjinx" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgkalista" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgkatarina" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgkayn" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgleblanc" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgmorgana" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgneeko" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgnidalee" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgpyke" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgqiyana" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgriven" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgsett" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgyasuo" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgyone" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_height="98dp"
                        android:layout_width="80dp"
                        android:background="@android:color/background_dark"
                        android:contentDescription="@string/botao_campeoes"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/imgzed" />

                </TableRow>

            </TableLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeBorda2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cabecalho"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearContainer"
        app:layout_constraintTop_toTopOf="@+id/linearContainer">

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>